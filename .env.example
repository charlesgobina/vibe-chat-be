# Server Configuration
PORT=8000
# Frontend URL (optional - development allows any localhost origin)
FRONTEND_URL=http://localhost:8080

# AI Provider Configuration (choose one)
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini
GOOGLE_API_KEY=your_google_api_key_here

# Groq
GROQ_API_KEY=your_groq_api_key_here

# Redis (optional, for conversation history)
REDIS_URL=redis://localhost:6379

# Web Search Configuration
# Get your free API key from https://api.search.brave.com/
BRAVE_API_KEY=your_brave_search_api_key_here

# Spotify Integration
# Get your credentials from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://127.0.0.1:8000/api/spotify/callback